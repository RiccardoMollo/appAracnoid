<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.utente.apparacnoid.MenuPrincipale"
    android:background="@drawable/background_risultati"
    >

    <TextView
        android:text="MenÃ¹ Principale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:id="@+id/menu"
        android:textSize="50sp"
        />

    <Button
        android:text="Nuova Partita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:id="@+id/nuovapartita"
        android:textSize="32sp"
        android:onClick="clickNuovaPartita"
        />

    <Button
        android:text="Regolamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:id="@+id/regole"
        android:textSize="32sp"
        android:onClick="clickRegole"
        />



</LinearLayout>
